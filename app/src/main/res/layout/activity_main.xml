<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/info_text"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@android:style/TextAppearance.Large"
        android:fontFamily="cursive"
        android:padding="@dimen/paddingTop"
        android:background="@color/textcolor"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:text="@string/bakery"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/info_text"
        android:contentDescription="image"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bakery" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:text="@string/phone"
        android:autoLink="phone"
        android:background="@color/bg"
        android:textSize="24sp"
        android:padding="@dimen/padding"
        android:textColor="@color/textcolor"
        android:drawableLeft="@drawable/ic_local_phone_black_24dp"
        android:drawablePadding="@dimen/paddingTop"
        android:layout_margin="@dimen/paddingTop"/>

    <TextView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/time"
        android:text="@string/web"
        android:autoLink="web"
        android:background="@color/bg"
        android:textSize="24sp"
        android:padding="@dimen/padding"
        android:textColor="@color/textcolor"
        android:drawableLeft="@drawable/ic_web_asset_black_24dp"
        android:drawablePadding="@dimen/paddingTop"
        android:layout_margin="@dimen/paddingTop"/>

    <TextView
        android:id="@+id/loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:text="@string/loc"
        android:background="@color/bg"
        android:autoLink="map"
        android:textSize="24sp"
        android:padding="@dimen/padding"
        android:textColor="@color/textcolor"
        android:drawableLeft="@drawable/ic_location_on_black_24dp"
        android:drawablePadding="@dimen/paddingTop"
        android:layout_margin="@dimen/paddingTop"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loc"
        android:text="@string/time"
        android:drawableLeft="@drawable/ic_access_time_black_24dp"
        android:background="@color/bg"
        android:textSize="24sp"
        android:padding="@dimen/padding"
        android:textColor="@color/textcolor"
        android:drawablePadding="@dimen/paddingTop"
        android:layout_margin="@dimen/paddingTop"/>


    </RelativeLayout>
</ScrollView>
